using System;
using System.Drawing;
using System.Text;
using System.Windows.Forms;

static class Program
{
    [STAThread]
    static void Main()
    {
        Application.EnableVisualStyles();
        Application.SetCompatibleTextRenderingDefault(false);

        Form form = new Form();
        form.Text = "Suma por filas y columnas (3x3)";
        form.StartPosition = FormStartPosition.CenterScreen;
        form.ClientSize = new Size(300, 370);

        TextBox[,] matriz = new TextBox[3, 3];
        int cellSize = 50;
        int startX = 20;
        int startY = 20;

        // Crear matriz 3x3 con validación
        for (int fila = 0; fila < 3; fila++)
        {
            for (int col = 0; col < 3; col++)
            {
                TextBox txt = new TextBox();
                txt.Size = new Size(cellSize, cellSize);
                txt.Location = new Point(startX + col * (cellSize + 5), startY + fila * (cellSize + 5));
                txt.TextAlign = HorizontalAlignment.Center;

                // Validación: solo números
                txt.KeyPress += (sender, e) =>
                {
                    if (!char.IsControl(e.KeyChar) && !char.IsDigit(e.KeyChar) && e.KeyChar != '-')
                        e.Handled = true;
                    if (e.KeyChar == '-' && ((TextBox)sender).SelectionStart != 0)
                        e.Handled = true;
                    if (e.KeyChar == '-' && ((TextBox)sender).Text.Contains("-"))
                        e.Handled = true;
                };

                form.Controls.Add(txt);
                matriz[fila, col] = txt;
            }
        }

        Button btnCalcular = new Button();
        btnCalcular.Text = "Calcular sumas";
        btnCalcular.Size = new Size(150, 30);
        btnCalcular.Location = new Point((form.ClientSize.Width - btnCalcular.Width) / 2, startY + 3 * (cellSize + 5) + 20);
        form.Controls.Add(btnCalcular);

        btnCalcular.Click += (s, e) =>
        {
            int[] sumaFilas = new int[3];
            int[] sumaColumnas = new int[3];

            for (int fila = 0; fila < 3; fila++)
            {
                for (int col = 0; col < 3; col++)
                {
                    string texto = matriz[fila, col].Text;
                    if (int.TryParse(texto, out int valor))
                    {
                        sumaFilas[fila] += valor;
                        sumaColumnas[col] += valor;
                    }
                    else
                    {
                        MessageBox.Show($"Valor inválido en la celda ({fila + 1}, {col + 1}). Solo números permitidos.");
                        return;
                    }
                }
            }

            StringBuilder resultado = new StringBuilder();
            for (int i = 0; i < 3; i++)
                resultado.AppendLine($"Suma fila {i + 1}: {sumaFilas[i]}");
            resultado.AppendLine();
            for (int j = 0; j < 3; j++)
                resultado.AppendLine($"Suma columna {j + 1}: {sumaColumnas[j]}");

            MessageBox.Show(resultado.ToString(), "Resultado");
        };

        Application.Run(form);
    }
}
