using System;
using System.Linq;

public class TemperaturaConverter
{
    public static void Main(string[] args)
    {
        const int DIAS_SEMANA = 7;
        double[] temperaturasCelsius = new double[DIAS_SEMANA];
        string input;
        double temp;

        Console.WriteLine("--- Conversor de temperaturas ---");
        
        for (int i = 0; i < DIAS_SEMANA; i++)
        {
            while (true)
            {
                Console.Write($"Ingresa la temperatura del dia {i + 1} (en C): ");
                input = Console.ReadLine();
                
                if (double.TryParse(input, out temp))
                {
                    temperaturasCelsius[i] = temp;
                    break;
                }
                else
                {
                    Console.WriteLine("Entrada invalida. Por favor, ingresa un valor numerico.");
                }
            }
        }

        double[] temperaturasFahrenheit = new double[DIAS_SEMANA];

        for (int i = 0; i < DIAS_SEMANA; i++)
        {
            temperaturasFahrenheit[i] = (temperaturasCelsius[i] * 9 / 5) + 32;
        }

        Console.WriteLine("\n--- Temperaturas Registradas y Convertidas ---");
        Console.WriteLine("Dia | Celsius (C) | Fahrenheit (F)");
        Console.WriteLine("----------------------------------");
        for (int i = 0; i < DIAS_SEMANA; i++)
        {
            Console.WriteLine($" {i + 1,-3} | {temperaturasCelsius[i],12:F1} | {temperaturasFahrenheit[i],14:F1}");
        }

        Console.WriteLine("\n--- Calculo de estadisticas avanzadas ---");

        double promedioCelsius = temperaturasCelsius.Average();
        double promedioFahrenheit = temperaturasFahrenheit.Average();
        Console.WriteLine($"• Temperatura promedio: {promedioCelsius:F1}C ({promedioFahrenheit:F1}F)");

        double minTemp = temperaturasCelsius.Min();
        double maxTemp = temperaturasCelsius.Max();

        int diaMasFrioIndex = Array.IndexOf(temperaturasCelsius, minTemp) + 1;
        int diaMasCalurosoIndex = Array.IndexOf(temperaturasCelsius, maxTemp) + 1;

        Console.WriteLine($"• Dia mas frio: Dia {diaMasFrioIndex} con {minTemp:F1}C");
        Console.WriteLine($"• Dia mas caluroso: Dia {diaMasCalurosoIndex} con {maxTemp:F1}C");

        int diasSobre30C = temperaturasCelsius.Count(t => t > 30.0);
        Console.WriteLine($"• Dias por encima de 30 C: {diasSobre30C}");

        int diasBajoCero = temperaturasCelsius.Count(t => t < 0.0);
        Console.WriteLine($"• Dias bajo cero: {diasBajoCero}");
    }
}
