using System;
using System.Drawing;
using System.Text;
using System.Windows.Forms;

static class Program
{
    [STAThread]
    static void Main()
    {
        Application.EnableVisualStyles();
        Application.SetCompatibleTextRenderingDefault(false);

        // Crear formulario principal
        Form form = new Form();
        form.Text = "Suma de filas y columnas (3x4)";
        form.StartPosition = FormStartPosition.CenterScreen;
        form.ClientSize = new Size(350, 320);

        // Crear matriz 3x4 de TextBoxes
        TextBox[,] matriz = new TextBox[3, 4];
        int cellSize = 50;
        int startX = 20;
        int startY = 20;

        for (int fila = 0; fila < 3; fila++)
        {
            for (int col = 0; col < 4; col++)
            {
                TextBox txt = new TextBox();
                txt.Size = new Size(cellSize, cellSize);
                txt.Location = new Point(startX + col * (cellSize + 5), startY + fila * (cellSize + 5));
                txt.TextAlign = HorizontalAlignment.Center;

                form.Controls.Add(txt);
                matriz[fila, col] = txt;
            }
        }

        // Botón para calcular sumas
        Button btnSumar = new Button();
        btnSumar.Text = "Calcular sumas";
        btnSumar.Size = new Size(150, 30);
        btnSumar.Location = new Point((form.ClientSize.Width - btnSumar.Width) / 2, startY + 3 * (cellSize + 5) + 20);
        form.Controls.Add(btnSumar);

        // Evento del botón
        btnSumar.Click += (s, e) =>
        {
            int filas = 3;
            int columnas = 4;

            int[] sumaFilas = new int[filas];
            int[] sumaColumnas = new int[columnas];

            // Leer valores y sumar
            for (int fila = 0; fila < filas; fila++)
            {
                for (int col = 0; col < columnas; col++)
                {
                    string texto = matriz[fila, col].Text;

                    if (int.TryParse(texto, out int valor))
                    {
                        sumaFilas[fila] += valor;
                        sumaColumnas[col] += valor;
                    }
                    else
                    {
                        MessageBox.Show($"Valor inválido en la celda ({fila + 1}, {col + 1}).");
                        return;
                    }
                }
            }

            // Mostrar resultados
            StringBuilder resultado = new StringBuilder();
            for (int i = 0; i < filas; i++)
            {
                resultado.AppendLine($"Suma de fila {i + 1}: {sumaFilas[i]}");
            }
            resultado.AppendLine();
            for (int j = 0; j < columnas; j++)
            {
                resultado.AppendLine($"Suma de columna {j + 1}: {sumaColumnas[j]}");
            }

            MessageBox.Show(resultado.ToString(), "Resultado de sumas");
        };

        Application.Run(form);
    }
}
